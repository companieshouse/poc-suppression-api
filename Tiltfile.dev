local_resource(
  name = 'dev:poc-suppression-api:init',
  cmd = 'npm --silent install && npm --silent run build:init'
)

local_resource(
  name = 'dev:poc-suppression-api:build-code',
  cmd = 'npm --silent run build:compile',
  deps = [
    'src'
  ]
)

custom_build(
  ref = '169942020521.dkr.ecr.eu-west-1.amazonaws.com/local/poc-suppression-api',
  command = 'DOCKER_BUILDKIT=1 docker build --ssh default -t $EXPECTED_REF .',
  live_update = [
    sync(
      local_path = './dist',
      remote_path = '/app/dist'
    ),
    restart_container()
  ],
  deps = [
    './dist'
  ]
)
